{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "standard",
        "standard-react",
        "plugin:prettier/recommended",
        "prettier/standard",
        "prettier/react",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:react-hooks/recommended"
    ],
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "legacyDecorators": true,
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "16.13.1"
        }
    }
}
